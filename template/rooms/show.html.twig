{% extends 'base.html.twig' %}

{% block title %}
Gestionnaire d'hôtels Hb-HotelManager
{% endblock %}

{% block content %}


<a href="{{env.base_path}}">
    <i class="fa fa-arrow-left" aria-hidden="true"></i> retour à la liste
</a>
<!-- CAS 1 : La chambre est innoccupée -->
<div class="card mb-3">
    <div class="card-header">
        <strong>Gestion de la chambre # {{room.number}}</strong> 
        {% if room.clientId %}
        <span class="badge badge-danger">Occupé</span>
        {% else %}
        <span class="badge badge-success">Libre</span>
        {% endif %}
    </div>
    <div class="card-body"> 

        {% if room.clientId %}
        <p>
            Occupée par {{ room.client.firstname }} {{ room.client.lastname }}. <a
                href="{{ env.base_path ~ '/rooms/' ~ room.id ~ '/deleteClient' }}" class="text-danger">Supprimer la
                reservation</a>
        </p>
        <form action="{{ env.base_path ~ '/rooms/' ~ room.id ~ '/edit' }}" method="post">
            <div class="form-group">
                <label for="formClient">Ajouter un client</label>
                <select name="" id="formClient" class="form-control">
                    <option value="">Emma Watson</option>
                    <option value="">John Doe</option>
                </select>
            </div>

            <button class="btn btn-primary">Ajouter le client à la chambre</button>

        </form>
        {% endif %}
    </div>
    <div class="card-footer">
        <a href="#" class="btn btn-danger">
            <i class="fa fa-trash" aria-hidden="true"></i> Supprimer la chambre
        </a>
    </div>
</div>
{% endblock %}